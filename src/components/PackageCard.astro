---
import StickerButton from "./StickerButton.astro";

interface Props {
    title: string;
    price: string;
    ageRange: string;
    duration: string;
    inclusions: string[];
    badge?: string;
    isPopular?: boolean;
}

const {
    title,
    price,
    ageRange,
    duration,
    inclusions,
    badge,
    isPopular = false,
} = Astro.props;
---

<div
    class:list={[
        "relative bg-white border-3 border-ink rounded-[24px] p-6 flex flex-col h-full transition-transform hover:-translate-y-1",
        isPopular
            ? "shadow-[8px_8px_0px_#7C5CFF]"
            : "shadow-[8px_8px_0px_#1B1B1D]",
    ]}
>
    {
        badge && (
            <div class="absolute -top-4 -right-2 bg-badge text-white font-heading font-bold px-4 py-1 rounded-full border-2 border-ink shadow-[2px_2px_0px_#1B1B1D] rotate-3 text-sm">
                {badge}
            </div>
        )
    }

    <h3 class="font-heading text-2xl font-bold mb-2">{title}</h3>
    <div class="text-3xl font-heading font-bold text-pop-a mb-4">{price}</div>

    <div class="flex gap-4 text-sm font-bold text-ink/70 mb-6">
        <div class="flex items-center gap-1">
            <span class="text-lg">üë∂</span>
            {ageRange}
        </div>
        <div class="flex items-center gap-1">
            <span class="text-lg">‚è±Ô∏è</span>
            {duration}
        </div>
    </div>

    <ul class="space-y-3 mb-8 flex-1">
        {
            inclusions.map((item) => (
                <li class="flex items-start gap-2 text-sm font-medium">
                    <span class="text-pop-c text-lg leading-none">‚úî</span>
                    {item}
                </li>
            ))
        }
    </ul>

    <StickerButton
        href={`${import.meta.env.BASE_URL}/contact/`}
        variant={isPopular ? "primary" : "secondary"}
        class="w-full"
    >
        Book Party
    </StickerButton>
</div>
