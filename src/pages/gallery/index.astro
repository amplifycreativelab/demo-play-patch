---
import MainLayout from "../../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import cakeTimeImg from "../../assets/images/cake-time-real.webp";
import balloonImg from "../../assets/images/balloon-fun-real.webp";
import craftImg from "../../assets/images/creative-craft-real.webp";
import discoImg from "../../assets/images/mini-disco-real.webp";
import giftImg from "../../assets/images/gift-bags-real.webp";
import sensoryImg from "../../assets/images/sensory-play-real.webp";
---

<MainLayout title="Gallery | PlayPatch">
    <section class="pt-20 pb-12 text-center">
        <div class="container mx-auto px-4">
            <h1 class="font-heading text-5xl font-bold mb-6 text-ink">
                Moments of Joy
            </h1>
            <p class="text-xl text-ink/70 max-w-2xl mx-auto">
                See the smiles, the mess, and the magic we create every weekend.
            </p>
        </div>
    </section>

    <section class="pb-24">
        <div
            class="container mx-auto px-4 columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8"
        >
            <!-- Gallery Placeholders -->
            <!-- Gallery Item -->
            <div
                class="break-inside-avoid bg-white p-4 rounded-3xl border-3 border-ink shadow-[4px_4px_0px_#1B1B1D]"
            >
                <div
                    class="aspect-square rounded-xl overflow-hidden mb-2 border-2 border-ink"
                >
                    <Image
                        src={cakeTimeImg}
                        alt="Cake Time"
                        class="w-full h-full object-cover"
                    />
                </div>
                <p class="font-bold text-center text-ink/60">Cake Time</p>
            </div>

            <div
                class="break-inside-avoid bg-white p-4 rounded-3xl border-3 border-ink shadow-[4px_4px_0px_#1B1B1D]"
            >
                <div
                    class="aspect-[3/4] rounded-xl overflow-hidden mb-2 border-2 border-ink"
                >
                    <Image
                        src={balloonImg}
                        alt="Balloon Fun"
                        class="w-full h-full object-cover"
                    />
                </div>
                <p class="font-bold text-center text-ink/60">Balloon Fun</p>
            </div>

            <div
                class="break-inside-avoid bg-white p-4 rounded-3xl border-3 border-ink shadow-[4px_4px_0px_#1B1B1D]"
            >
                <div
                    class="aspect-video rounded-xl overflow-hidden mb-2 border-2 border-ink"
                >
                    <Image
                        src={craftImg}
                        alt="Craft Corner"
                        class="w-full h-full object-cover"
                    />
                </div>
                <p class="font-bold text-center text-ink/60">Craft Corner</p>
            </div>

            <div
                class="break-inside-avoid bg-white p-4 rounded-3xl border-3 border-ink shadow-[4px_4px_0px_#1B1B1D]"
            >
                <div
                    class="aspect-[3/4] rounded-xl overflow-hidden mb-2 border-2 border-ink"
                >
                    <Image
                        src={discoImg}
                        alt="Disco Moves"
                        class="w-full h-full object-cover"
                    />
                </div>
                <p class="font-bold text-center text-ink/60">Disco Moves</p>
            </div>

            <div
                class="break-inside-avoid bg-white p-4 rounded-3xl border-3 border-ink shadow-[4px_4px_0px_#1B1B1D]"
            >
                <div
                    class="aspect-square rounded-xl overflow-hidden mb-2 border-2 border-ink"
                >
                    <Image
                        src={giftImg}
                        alt="Gift Bags"
                        class="w-full h-full object-cover"
                    />
                </div>
                <p class="font-bold text-center text-ink/60">Gift Bags</p>
            </div>

            <div
                class="break-inside-avoid bg-white p-4 rounded-3xl border-3 border-ink shadow-[4px_4px_0px_#1B1B1D]"
            >
                <div
                    class="aspect-video rounded-xl overflow-hidden mb-2 border-2 border-ink"
                >
                    <Image
                        src={sensoryImg}
                        alt="Sensory Play"
                        class="w-full h-full object-cover"
                    />
                </div>
                <p class="font-bold text-center text-ink/60">Sensory Play</p>
            </div>
        </div>
    </section>
</MainLayout>
